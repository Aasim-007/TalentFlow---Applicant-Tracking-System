<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="ATS-PU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <properties>
            <!-- Database connection -->
            <!-- If your Postgres host requires SSL (typical for managed hosts), append ?sslmode=require -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://ep-bold-waterfall-aemz46uw-pooler.c-2.us-east-2.aws.neon.tech:5432/TalentFlowDB?sslmode=require"/>
            <property name="jakarta.persistence.jdbc.user" value="neondb_owner"/>
            <property name="jakarta.persistence.jdbc.password" value="TalentFlowDB@Trimat"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>

            <!-- Hibernate settings -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <!-- Connection validation: helpful when debugging connection issues -->
            <property name="hibernate.connection.provider_disables_autocommit" value="true"/>
            <property name="hibernate.hikari.connectionTestQuery" value="SELECT 1"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>
